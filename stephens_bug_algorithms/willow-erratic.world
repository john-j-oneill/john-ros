define block position
(
  size [0.30 0.30 0.000]
  gui_nose 0
)

define topurg ranger
(
	sensor( 			
    range [ 0.0  30.0 ]
    fov 270.25
    samples 1081
  )

  # generic model properties
  color "black"
  size [ 0.050 0.050 0.100 ]
)

define erratic position
(
  #size [1.5 1.5 0.25]
  size [0.350 0.350 0.250]
  origin [-0.050 0.000 0.000 0.000]
  gui_nose 1
  drive "diff"
  localization "odom"
  odom_error [ 0 0 0 0 0 0]
  topurg(pose [ 0.050 0.000 0.000 0.000 ])
)

define floorplan model
(
  # sombre, sensible, artistic
  color "gray30"

  # most maps will need a bounding box
  boundary 1

  gui_nose 0
  gui_grid 0

  gui_outline 0
  gripper_return 0
  fiducial_return 0
  laser_return 1
)

# set the resolution of the underlying raytrace model in meters
resolution 0.02

interval_sim 100  # simulation timestep in milliseconds
speedup 4


window
( 
  size [ 958 1030 ] # in pixels.

  rotate [ 0.000 0.000 ] #rotation angles with x and y axes
  scale 14.783 #pixels per meter
  show_data 1   # shall we see sensor data?
  show_footprints 1
)

# load an environment bitmap
floorplan
( 
  name "Maze"
  bitmap "bitmaps/maze.png"
  size [54.000 58.700 0.500]
  pose [ 0.000 0.000 0.000 0.000 ]
)

# throw in a robot
erratic( pose [ 0.0 0.0 0.000 0.0 ] name "era" color "blue")
block( pose [ -8 3 0.000 180.000 ] color "red")
